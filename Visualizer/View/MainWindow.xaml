<Window x:Class="Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="539.154" Width="693.566" MouseWheel="Window_MouseWheel">
    <Grid Height="498" VerticalAlignment="Bottom" Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,180,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ComboBox x:Name="cmbFloors" Grid.Column="0" Grid.Row="0"
                      ItemsSource="{Binding Floors}" SelectedItem="{Binding SelectedFloor}" Margin="10,10,0,0" SelectionChanged="cmbFloors_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <TextBlock Text="Floor number: " />
                            <TextBlock Text="{Binding Number}" FontWeight="Bold" />
                        </WrapPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>

        <Viewbox Stretch="Fill">
            <Canvas Name="myCanvas" Grid.ColumnSpan="2" Margin="181,0,0,0" Width="400" Height="300"/>
        </Viewbox>
    </Grid>
</Window>
